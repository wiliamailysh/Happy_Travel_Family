<section class ="destinations">
  <div class="destinations-banner">
    <div class="destinations-banner__title">
      <h1>destinations</h1>
    </div>
    <div class="destinations-banner__subtitle">
      <p>Partez à la découverte des paysages et des peuples du nord Vietnam avec
        Happy Family Travel ! Nous mettrons tout notre savoir-faire à votre
        service pour vous offrir une expérience unique et adaptée à vos attentes !
      </p>
    </div>
  </div>
  <div class="trip-preview-container">
    <% @tours.each do |tour| %>
    <div class="trip">
      <div class="trip__description trip__description--hidden">
        <p><%= tour.description %></p>
      </div>
      <div class="trip__title">
        <h3><%= tour.name %></h3>
      </div>
      <div class="trip__link">
        <%= link_to root_path do %>
          <p>En savoir plus</p>
        <% end %>
      </div>
      <div class="trip__image"></div>
    </div>
    <% end %>
  </div>
</section>
